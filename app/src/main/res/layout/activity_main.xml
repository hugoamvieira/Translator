<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.hugoamvieira.picturetranslator.MainActivity">

    <Button
        android:id="@+id/take_picture_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_picture_btn_string" />

    <Button
        android:id="@+id/translation_history_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/take_picture_btn"
        android:layout_marginTop="15dp"
        android:text="@string/translation_history_string" />

    <TextView
        android:id="@+id/labels_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/translation_history_btn"
        android:layout_marginTop="114dp" />

    <ProgressBar
        android:id="@+id/vision_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labels_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:visibility="invisible" />
</RelativeLayout>
