<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.hugoamvieira.picturetranslator.MainActivity">

    <Button
        android:id="@+id/take_picture_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_picture_btn_string" />

    <Button
        android:id="@+id/translation_history_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/take_picture_btn"
        android:layout_marginTop="15dp"
        android:text="@string/translation_history_string" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/translation_history_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible">

        <EditText
            android:id="@+id/text_to_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="none" />

        <Spinner
            android:id="@+id/languages_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_to_translate"
            android:layout_alignStart="@+id/text_to_translate"
            android:layout_below="@+id/text_to_translate"
            android:layout_marginBottom="20dp"
            android:entries="@array/supported_translations" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/languages_spinner"
            android:layout_centerHorizontal="true"
            android:textSize="24sp" />
    </RelativeLayout>
</RelativeLayout>
